<?xml version="1.0" encoding="utf-8"?>
<local:ModuleView
  x:Class="Spakov.TermBar.Views.SettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Spakov.TermBar.Views"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid
    Style="{StaticResource LayoutGrid}"
    Background="Transparent">
    
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="300"/>
      <ColumnDefinition Width="600"/>
    </Grid.ColumnDefinitions>

    <StackPanel
      x:Name="ConfigFileLocation"
      Orientation="Vertical"
      VerticalAlignment="Center"
      Grid.Row="0"
      Grid.Column="0">

      <TextBlock
        Style="{StaticResource Prose}"
        Text="The TermBar configuration file is located here:"
        Grid.Row="1"
        Grid.Column="0"/>
      
      <TextBlock
        x:Name="ConfigPathTextBlock"
        Style="{StaticResource Prose}"
        Text="{x:Bind ConfigPath}"
        Grid.Row="2"
        Grid.Column="0"/>

      <TextBlock
        Style="{StaticResource Prose}"
        Text="Edit it in your favorite editor and restart TermBar to see the changes."
        Grid.Row="3"
        Grid.Column="0"/>

    </StackPanel>

    <Grid
      x:Name="RuntimeInfo"
      Style="{StaticResource LayoutGrid}"
      Grid.Row="0"
      Grid.Column="1">

      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>

      <TextBlock
        Text="Runtime configuration:"
        Grid.Row="0"
        Grid.Column="0"/>

      <RichEditBox
        x:Name="RuntimeConfig"
        Height="400"
        Grid.Row="1"
        Grid.Column="0"/>

      <TextBlock
        Text="Detected displays:"
        Grid.Row="2"
        Grid.Column="0"/>

      <TextBox
        Text="{x:Bind DisplayList}"
        Height="100"
        Grid.Row="3"
        Grid.Column="0"/>

    </Grid>

    <StackPanel
      x:Name="Buttons"
      HorizontalAlignment="Right"
      Grid.Row="1"
      Grid.Column="0"
      Grid.ColumnSpan="2">
      <Button
        x:Name="Exit"
        Style="{StaticResource AccentedButton}"
        Click="Exit_Click">
        <TextBlock
          Style="{StaticResource AccentedTextBlock}"
          Text="Exit TermBar"/>
      </Button>
      <Button
        x:Name="Restart"
        Click="Restart_Click">
        <TextBlock Text="Restart TermBar"/>
      </Button>
      <Button
        x:Name="CopyPath"
        Click="CopyPath_Click">
        <TextBlock Text="Copy Config File Path"/>
      </Button>
      <Button
        x:Name="ShowInExplorer"
        Click="ShowInExplorer_Click">
        <TextBlock Text="Show Config File in Explorer"/>
      </Button>
      <Button
        x:Name="Close"
        Click="Close_Click">
        <TextBlock Text="Close"/>
      </Button>
    </StackPanel>

  </Grid>
</local:ModuleView>
