    <Folder Include="Views\Modules\Clock\" />
    <Page Update="Views\Modules\Clock\ClockCalendarView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Views\Modules\Clock\ClockView.xaml">
